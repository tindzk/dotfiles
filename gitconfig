	name = Tim Nieradzik
[alias]
	br = branch
	ci = commit -v
	co = checkout
	df = diff
	lg = log --stat
	rb = svn rebase
	rlog = log --pretty=format:\"%h %Cblue%cr%Creset %cn %Cgreen%s%Creset\"%
	st = status -a
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[diff]
	rename = copy
	color = auto
	tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mirror]
	summary = true
[apply]
	whitespace = strip
[core]
	filemode = true
	autocrlf = input
[push]
	default = simple
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[credential]
	helper = store
[log]
	follow = true
[commit]
	verbose = true
[diff "pandoc"]
	textconv=pandoc --to=markdown
	prompt = false
[alias]
	wdiff = diff --word-diff=color --unified=1
	wshow = show --word-diff=color --unified=1
	np = !git --no-pager
